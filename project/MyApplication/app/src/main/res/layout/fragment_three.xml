<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.ThreeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/store"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/store"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="百词斩商城"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#EEEEEE" />

        <Button
            android:id="@+id/learn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/learn"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="每天一个知识点"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#EEEEEE" />

        <Button
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/test"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="词汇量测试"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#EEEEEE" />

        <Button
            android:id="@+id/clock"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:drawableLeft="@mipmap/clock"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="阅读提醒"
            android:textSize="15dp" />
    </LinearLayout>

</FrameLayout>
