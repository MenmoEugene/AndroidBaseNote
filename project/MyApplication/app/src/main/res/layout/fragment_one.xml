<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.OneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#E6E6E6"
            android:paddingLeft="15dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@mipmap/horse"
                android:paddingLeft="15dp" />

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/headtitle"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Brabo Reading"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:paddingLeft="3dp"
                    android:text=" 已完成 1 / 10 篇 " />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#FFF5CC" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C4C4C4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="—今日计划1篇—"
                android:textSize="20dp"
                android:typeface="monospace" />

            <LinearLayout
                android:id="@+id/ad"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignBottom="@id/tv_1"
                android:layout_gravity="center_horizontal"
                android:background="#E6E6E6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <View
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/ad" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:text="Our Deepest Fear"
                        android:textAllCaps="false"
                        android:textSize="15dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Our deepest fear is that we are powerful beyond measure" />
            </LinearLayout>

            <TextView
                android:id="@+id/link"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="#C4C4C4"
                android:gravity="center_horizontal|center_vertical"
                android:text="查看更多文章"
                android:textColor="#6F6F6F" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
