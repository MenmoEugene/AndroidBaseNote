<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication1.FouthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/finish_essay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/jiantou"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="我的页面"
            android:textSize="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#EEEEEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/pamphlet"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="单词本"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/note"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="笔记" />

            <TextView
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"

                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/test1"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="词汇量" />

            <TextView
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"

                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/group"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="阅读小组" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"

                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/kapian"
                android:gravity="center"
                android:paddingTop="8dp"
                android:text="阅读积分卡" />

            <TextView
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="80dp"

                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/invite"
                android:gravity="center"
                android:paddingTop="12dp"
                android:text="好友邀请" />

            <TextView
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"

                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/message"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="消息" />

            <TextView
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/circle"
                android:gravity="center"
                android:paddingTop="12dp"
                android:text="小圈子" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
